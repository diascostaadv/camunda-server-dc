# Camunda Platform - Azure Environment Example
ENVIRONMENT=production

# Network Configuration
NETWORK_DRIVER=overlay

# Database Mode Configuration
EXTERNAL_DATABASE_MODE=true

# PostgreSQL Configuration (not used in external mode)
POSTGRES_DB=camunda
POSTGRES_USER=camunda
POSTGRES_PASSWORD=unused_in_external_mode
POSTGRES_PORT=5432

# Database Connection (URI-based) - Azure Database for PostgreSQL
# Replace with your actual Azure PostgreSQL connection string
DATABASE_URL=jdbc:postgresql://your-camunda-db.postgres.database.azure.com:5432/camunda?sslmode=require&user=adminuser@your-camunda-db&password=YourSecurePassword123

# Camunda Configuration
CAMUNDA_PORT=8080
CAMUNDA_JMX_PORT=9404
TZ=America/Sao_Paulo

# Monitoring Configuration (can also be external)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=secure_admin_password_2024

# Scaling Configuration
CAMUNDA_REPLICAS=2

# Azure-specific configurations
# SSL Certificate validation
JAVA_OPTS_EXTRA=-Dspring.datasource.hikari.connection-test-query="SELECT 1"

# Connection pool settings for Azure
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000
DB_MAXIMUM_POOL_SIZE=20