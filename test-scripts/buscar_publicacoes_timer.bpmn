<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" 
                  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
                  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" 
                  xmlns:di="http://www.omg.org/spec/DD/20100524/DI" 
                  xmlns:camunda="http://camunda.org/schema/1.0/bpmn" 
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  id="Definitions_BuscarPublicacoes" 
                  targetNamespace="http://bpmn.io/schema/bpmn">
  
  <bpmn:process id="buscar_publicacoes_automatico" name="Buscar Publicações Automático" isExecutable="true">
    
    <bpmn:startEvent id="timer_inicio" name="Timer Diário (18:00)">
      <bpmn:outgoing>flow_timer_para_busca</bpmn:outgoing>
      <bpmn:timerEventDefinition>
        <bpmn:timeCycle>0 0 18 * * ?</bpmn:timeCycle>
      </bpmn:timerEventDefinition>
    </bpmn:startEvent>
    <bpmn:serviceTask id="buscar_publicacoes_task" 
                      name="Buscar Publicações SOAP" 
                      camunda:type="external" 
                      camunda:topic="BuscarPublicacoes">
      <bpmn:incoming>flow_timer_para_busca</bpmn:incoming>
      <bpmn:outgoing>flow_busca_para_gateway</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:exclusiveGateway id="gateway_resultado_busca" name="Busca OK?">
      <bpmn:incoming>flow_busca_para_gateway</bpmn:incoming>
      <bpmn:outgoing>flow_busca_sucesso</bpmn:outgoing>
      <bpmn:outgoing>flow_busca_erro</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <bpmn:serviceTask id="log_busca_sucesso" 
                      name="Log Busca Sucesso" 
                      camunda:type="external" 
                      camunda:topic="log_processamento">
      <bpmn:incoming>flow_busca_sucesso</bpmn:incoming>
      <bpmn:outgoing>flow_sucesso_para_estatisticas</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:serviceTask id="log_busca_erro" 
                      name="Log Busca Erro" 
                      camunda:type="external" 
                      camunda:topic="log_processamento">
      <bpmn:incoming>flow_busca_erro</bpmn:incoming>
      <bpmn:outgoing>flow_erro_para_fim</bpmn:outgoing>
    </bpmn:serviceTask>
    <bpmn:scriptTask id="calcular_estatisticas" 
                     name="Calcular Estatísticas" 
                     scriptFormat="javascript">
      <bpmn:incoming>flow_sucesso_para_estatisticas</bpmn:incoming>
      <bpmn:outgoing>flow_stats_para_gateway_stats</bpmn:outgoing>
      <bpmn:script><![CDATA[
        var totalEncontradas = execution.getVariable("total_encontradas") || 0;
        var instanciasCriadas = execution.getVariable("instancias_criadas") || 0;
        var instanciasComErro = execution.getVariable("instancias_com_erro") || 0;
        var duracaoSegundos = execution.getVariable("duracao_segundos") || 0;
        
        var taxaSucesso = totalEncontradas > 0 ? (instanciasCriadas / totalEncontradas) * 100 : 100;
        
        var nivelSucesso = "alto";
        if (taxaSucesso < 50) {
          nivelSucesso = "baixo";
        } else if (taxaSucesso < 80) {
          nivelSucesso = "medio";
        }
        
        var resumo = "Busca automática concluída: " + 
                    totalEncontradas + " encontradas, " +
                    instanciasCriadas + " processadas com sucesso, " +
                    instanciasComErro + " com erro. " +
                    "Taxa de sucesso: " + taxaSucesso.toFixed(1) + "%";
        
        execution.setVariable("taxa_sucesso", taxaSucesso);
        execution.setVariable("nivel_sucesso", nivelSucesso);
        execution.setVariable("resumo_busca", resumo);
        execution.setVariable("timestamp_calculo", new Date().toISOString());
      ]]></bpmn:script>
    </bpmn:scriptTask>
    
    <bpmn:exclusiveGateway id="gateway_nivel_sucesso" name="Sucesso Alto?">
      <bpmn:incoming>flow_stats_para_gateway_stats</bpmn:incoming>
      <bpmn:outgoing>flow_sucesso_alto</bpmn:outgoing>
      <bpmn:outgoing>flow_sucesso_baixo</bpmn:outgoing>
    </bpmn:exclusiveGateway>
    
    <bpmn:serviceTask id="notificar_sucesso" 
                      name="Notificar Sucesso" 
                      camunda:type="external" 
                      camunda:topic="enviar_notificacao">
      <bpmn:incoming>flow_sucesso_alto</bpmn:incoming>
      <bpmn:outgoing>flow_notif_sucesso_para_fim</bpmn:outgoing>
    </bpmn:serviceTask>
    
    <bpmn:serviceTask id="notificar_problema" 
                      name="Notificar Problema" 
                      camunda:type="external" 
                      camunda:topic="enviar_notificacao">
      <bpmn:incoming>flow_sucesso_baixo</bpmn:incoming>
      <bpmn:outgoing>flow_notif_problema_para_fim</bpmn:outgoing>
    </bpmn:serviceTask>
    <bpmn:endEvent id="fim_sucesso" name="Busca Completa - Sucesso">
      <bpmn:incoming>flow_notif_sucesso_para_fim</bpmn:incoming>
    </bpmn:endEvent>
    
    <bpmn:endEvent id="fim_problema" name="Busca Completa - Problemas">
      <bpmn:incoming>flow_notif_problema_para_fim</bpmn:incoming>
    </bpmn:endEvent>
    
    <bpmn:endEvent id="fim_erro" name="Busca Falhou">
      <bpmn:incoming>flow_erro_para_fim</bpmn:incoming>
    </bpmn:endEvent>
    
    <bpmn:sequenceFlow id="flow_timer_para_busca" sourceRef="timer_inicio" targetRef="buscar_publicacoes_task" />
    <bpmn:sequenceFlow id="flow_busca_para_gateway" sourceRef="buscar_publicacoes_task" targetRef="gateway_resultado_busca" />
    <bpmn:sequenceFlow id="flow_busca_sucesso" sourceRef="gateway_resultado_busca" targetRef="log_busca_sucesso">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">
        ${status_busca == "success"}
      </bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    
    <bpmn:sequenceFlow id="flow_busca_erro" sourceRef="gateway_resultado_busca" targetRef="log_busca_erro">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">
        ${status_busca != "success"}
      </bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    
    <bpmn:sequenceFlow id="flow_sucesso_para_estatisticas" sourceRef="log_busca_sucesso" targetRef="calcular_estatisticas" />
    <bpmn:sequenceFlow id="flow_stats_para_gateway_stats" sourceRef="calcular_estatisticas" targetRef="gateway_nivel_sucesso" />
    
    <bpmn:sequenceFlow id="flow_sucesso_alto" sourceRef="gateway_nivel_sucesso" targetRef="notificar_sucesso">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">
        ${nivel_sucesso == "alto"}
      </bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    
    <bpmn:sequenceFlow id="flow_sucesso_baixo" sourceRef="gateway_nivel_sucesso" targetRef="notificar_problema">
      <bpmn:conditionExpression xsi:type="bpmn:tFormalExpression">
        ${nivel_sucesso != "alto"}
      </bpmn:conditionExpression>
    </bpmn:sequenceFlow>
    <bpmn:sequenceFlow id="flow_notif_sucesso_para_fim" sourceRef="notificar_sucesso" targetRef="fim_sucesso" />
    <bpmn:sequenceFlow id="flow_notif_problema_para_fim" sourceRef="notificar_problema" targetRef="fim_problema" />
    <bpmn:sequenceFlow id="flow_erro_para_fim" sourceRef="log_busca_erro" targetRef="fim_erro" />
    
  </bpmn:process>
  
  <bpmndi:BPMNDiagram id="BPMNDiagram_BuscarPublicacoes">
    <bpmndi:BPMNPlane id="BPMNPlane_BuscarPublicacoes" bpmnElement="buscar_publicacoes_automatico">
      <bpmndi:BPMNShape id="StartEvent_Timer" bpmnElement="timer_inicio">
        <dc:Bounds x="100" y="200" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="82" y="243" width="72" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="ServiceTask_BuscarPubs" bpmnElement="buscar_publicacoes_task">
        <dc:Bounds x="200" y="178" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Gateway_Resultado" bpmnElement="gateway_resultado_busca" isMarkerVisible="true">
        <dc:Bounds x="375" y="193" width="50" height="50" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="372" y="163" width="56" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="ServiceTask_LogSucesso" bpmnElement="log_busca_sucesso">
        <dc:Bounds x="500" y="100" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="ServiceTask_LogErro" bpmnElement="log_busca_erro">
        <dc:Bounds x="500" y="300" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="ScriptTask_Stats" bpmnElement="calcular_estatisticas">
        <dc:Bounds x="680" y="100" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="Gateway_Nivel" bpmnElement="gateway_nivel_sucesso" isMarkerVisible="true">
        <dc:Bounds x="855" y="115" width="50" height="50" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="844" y="85" width="72" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="ServiceTask_NotifSucesso" bpmnElement="notificar_sucesso">
        <dc:Bounds x="980" y="60" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="ServiceTask_NotifProblema" bpmnElement="notificar_problema">
        <dc:Bounds x="980" y="180" width="100" height="80" />
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="EndEvent_Sucesso" bpmnElement="fim_sucesso">
        <dc:Bounds x="1162" y="82" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="1141" y="125" width="78" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="EndEvent_Problema" bpmnElement="fim_problema">
        <dc:Bounds x="1162" y="202" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="1138" y="245" width="84" height="27" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNShape id="EndEvent_Erro" bpmnElement="fim_erro">
        <dc:Bounds x="682" y="322" width="36" height="36" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="669" y="365" width="62" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNShape>
      
      <bpmndi:BPMNEdge id="Flow_TimerParaBusca" bpmnElement="flow_timer_para_busca">
        <di:waypoint x="136" y="218" />
        <di:waypoint x="200" y="218" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_BuscaParaGateway" bpmnElement="flow_busca_para_gateway">
        <di:waypoint x="300" y="218" />
        <di:waypoint x="375" y="218" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_BuscaSucesso" bpmnElement="flow_busca_sucesso">
        <di:waypoint x="400" y="193" />
        <di:waypoint x="400" y="140" />
        <di:waypoint x="500" y="140" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="405" y="150" width="43" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_BuscaErro" bpmnElement="flow_busca_erro">
        <di:waypoint x="400" y="243" />
        <di:waypoint x="400" y="340" />
        <di:waypoint x="500" y="340" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="415" y="280" width="25" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_SucessoParaStats" bpmnElement="flow_sucesso_para_estatisticas">
        <di:waypoint x="600" y="140" />
        <di:waypoint x="680" y="140" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_StatsParaGateway" bpmnElement="flow_stats_para_gateway_stats">
        <di:waypoint x="780" y="140" />
        <di:waypoint x="855" y="140" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_SucessoAlto" bpmnElement="flow_sucesso_alto">
        <di:waypoint x="880" y="115" />
        <di:waypoint x="880" y="100" />
        <di:waypoint x="980" y="100" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="895" y="82" width="24" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_SucessoBaixo" bpmnElement="flow_sucesso_baixo">
        <di:waypoint x="880" y="165" />
        <di:waypoint x="880" y="220" />
        <di:waypoint x="980" y="220" />
        <bpmndi:BPMNLabel>
          <dc:Bounds x="895" y="190" width="26" height="14" />
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_NotifSucessoParaFim" bpmnElement="flow_notif_sucesso_para_fim">
        <di:waypoint x="1080" y="100" />
        <di:waypoint x="1162" y="100" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_NotifProblemaParaFim" bpmnElement="flow_notif_problema_para_fim">
        <di:waypoint x="1080" y="220" />
        <di:waypoint x="1162" y="220" />
      </bpmndi:BPMNEdge>
      
      <bpmndi:BPMNEdge id="Flow_ErroParaFim" bpmnElement="flow_erro_para_fim">
        <di:waypoint x="600" y="340" />
        <di:waypoint x="682" y="340" />
      </bpmndi:BPMNEdge>
      
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
  
</bpmn:definitions>